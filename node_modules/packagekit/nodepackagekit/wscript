srcdir = '.'
blddir = 'build'
VERSION = '0.0.1'

def set_options(opt):
  opt.tool_options('compiler_cxx')

def configure(conf):
  conf.check_tool('compiler_cxx')
  conf.check_tool('node_addon')
  conf.check_cfg(package='gtk+-3.0', uselib_store='GTK', args='--cflags --libs')
  conf.check_cfg(package='gio-2.0', uselib_store='GIO', args='--cflags --libs')
  conf.check_cfg(package='glib-2.0', uselib_store='GLIB', args='--cflags --libs')
  conf.check_cfg(package='packagekit-glib2', uselib_store='GLIB_PK', args='--cflags --libs')

def build(bld):
  obj = bld.new_task_gen('cxx', 'shlib', 'node_addon')
  obj.target = 'nodepackagekit'
  obj.source = 'nodepackagekit.cc'
  obj.uselib = "GLIB GTK GIO GLIB_PK"